div(ng-controller="ProjectsController as projectsCtrl")

  a.btn.btn-default(ng-click="new()")
    i.glyphicon.glyphicon-plus
    | New Project

  div.checkbox
    label
      input(type="checkbox" ng-model="includeInactive")
      | Show inactive

  div.project(ng-class="{active: project.project.is_active, inactive: !project.project.is_active}" ng-repeat="project in projects | filter:showInactive | filter:search")

    //- href="#/projects/{{project.project.id}}/sprints"
    a(ng-click="edit(project)")
      {{project.project.name}}

    i.glyphicon.glyphicon-cog
