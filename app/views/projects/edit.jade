div.modal-header
  h3.modal-title
    {{project.name}}
    small
      &nbsp; {{project.code | uppercase}}

div.modal-body

  form(role="form" novalidate="novalidate")

    div.form-group
      label(for="project-name") Project name
      input.form-control#project-name(type="text" placeholder="Project name" ng-model="project.name")

    div.form-group
      label(for="project-code") Project code
      input.form-control#project-code(type="text" placeholder="Project code" ng-model="project.code" maxlength="2" minlength="2")

    div.form-group
      label(for="project-owner") Owner
      input.form-control#project-owner(type="text" placeholder="Project owner" ng-model="project.user.id")

    div.checkbox
      label
        input(type="checkbox" ng-model="project.is_active")
        | Active?

div.modal-footer
  button.btn.btn-link(ng-click="cancel()") Cancel
  button.btn.btn-primary(ng-click="ok()") OK