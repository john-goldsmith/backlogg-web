div.modal-header
  h3.modal-title New Project

div.modal-body

  form(role="form" novalidate="novalidate")

    div.form-group
      label(for="project-name") Project name
      input.form-control#project-name(type="text" placeholder="Project name" ng-model="project.name")

    div.form-group
      label(for="project-code") Project code
      input.form-control#project-code(type="text" placeholder="Project code" ng-model="project.code")

    div.form-group
      label(for="project-owner") Owner
      input.form-control#project-owner(type="text" placeholder="Project owner" ng-model="project.owner")

    div.checkbox
      label
        input(type="checkbox" checked="checked" ng-model="project.active")
        | Active?

div.modal-footer
  button.btn.btn-primary(ng-click="ok()") OK
  button.btn.btn-warning(ng-click="cancel()") Cancel