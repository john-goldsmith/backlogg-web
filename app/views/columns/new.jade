div.modal-header
  h3.modal-title {{column.name || "New Column"}}

div.modal-body

  form(role="form" novalidate="novalidate")

    div.form-group
      label(for="project-name") Column name
      input.form-control#column-name(type="text" placeholder="Column name" ng-model="column.name")

div.modal-footer
  button.btn.btn-link(ng-click="cancel()") Cancel
  button.btn.btn-primary(ng-click="ok()") OK