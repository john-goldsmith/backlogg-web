div.modal-header
  h3.modal-title {{sprint.name}}

div.modal-body

  form(role="form" novalidate="novalidate")

    div.form-group
      label(for="project-name") Sprint name
      input.form-control#project-name(type="text" placeholder="Project name" ng-model="project.name")

    div.checkbox
      label
        input(type="checkbox" ng-model="project.is_active")
        | Active?

div.modal-footer
  button.btn.btn-link(ng-click="cancel()") Cancel
  button.btn.btn-primary(ng-click="ok()") OK