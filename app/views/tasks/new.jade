div.modal-header
  h3.modal-title {{task.name || "New Task"}}

div.modal-body

  form(role="form" novalidate="novalidate")

    div.form-group
      label(for="task-name") Task name
      input.form-control#task-name(type="text" placeholder="Task name" ng-model="task.name")

    div.checkbox
      label
        input(type="checkbox" checked="checked" ng-model="task.active")
        | Active?

div.modal-footer
  button.btn.btn-link(ng-click="cancel()") Cancel
  button.btn.btn-primary(ng-click="ok()") OK